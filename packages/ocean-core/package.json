    "gulp-sourcemaps": "^3.0.0",
    "node-sass": "^6.0.1",
    "postcss": "^8.2.9",
    "stylelint": "^14.1.0",
    "stylelint-config-sass-guidelines": "^9.0.0"
  },
  "browserslist": [
    "defaults"
  ],
  "stylelint": {

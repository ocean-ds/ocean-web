    "type": "git",
    "url": "https://github.com/ocean-ds/ocean-web.git",
    "directory": "packages/ocean-core"
  },
  "devDependencies": {
    "@types/cssnano": "^4.0.0",
    "@types/gulp": "^4.0.8",
    "@types/gulp-plumber": "^0.0.33",
    "@types/gulp-postcss": "^8.0.0",
    "@types/gulp-rename": "^2.0.0",
    "@types/gulp-sass": "^5.0.0",
    "@types/gulp-size": "^2.1.1",

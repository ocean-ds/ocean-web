{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build:libs": "lerna run build --stream",
    "build:storybook": "storybook build -s .storybook/assets",
    "build:docs": "lerna run --scope @useblu/ocean-docs build",
    "build": "run-s build:libs build:storybook build:docs",
    "start:docs": "lerna run --scope @useblu/ocean-docs start",
    "deploy:docs": "lerna run --scope @useblu/ocean-docs deploy",
    "test": "jest",
    "coverage": "jest --coverage",
    "postcoverage": "open-cli coverage/lcov-report/index.html",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "lerna run lint --stream",
    "watch:css": "lerna run --scope @useblu/ocean-core build:watch",
    "watch:storybook": "storybook dev -p 6006 -s .storybook/assets",
    "storybook": "npm-run-all build:libs --parallel watch:*",
    "predeploy:storybook": "lerna run build --stream",
    "deploy:storybook": "storybook-to-ghpages -s build:storybook",
    "cm": "cz",
    "version": "prettier --write '**/{CHANGELOG.md,lerna.json}'",
    "prepublishOnly": "ts-node ./scripts/copy-files.ts"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/helper-compilation-targets": "^7.17.0",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-decorators": "^7.27.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.18.6",
    "@babel/plugin-proposal-optional-chaining": "^7.21.0",
    "@babel/plugin-transform-class-properties": "^7.27.1",
    "@babel/plugin-transform-nullish-coalescing-operator": "^7.27.1",
    "@babel/plugin-transform-optional-chaining": "^7.27.1",
    "@babel/preset-env": "^7.16.0",
    "@babel/preset-react": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^17.0.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@storybook/addon-a11y": "^6.4.19",
    "@storybook/addon-actions": "^7.6.0",
    "@storybook/addon-docs": "^7.6.0",
    "@storybook/addon-essentials": "^7.6.0",
    "@storybook/addon-links": "^7.6.0",
    "@storybook/addons": "^6.4.19",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^7.6.0",
    "@storybook/react-webpack5": "^7.6.0",
    "@storybook/storybook-deployer": "^2.8.10",
    "@storybook/theming": "^7.6.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^12.0.0",
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.28.1",
    "@typescript-eslint/parser": "^4.28.1",
    "babel-loader": "^8.2.2",
    "browserslist": "^4.16.0",
    "chromatic": "^6.0.0",
    "commitizen": "^4.2.4",
    "css-loader": "^6.2.0",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.29.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jest-dom": "^3.8.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-storybook": "^0.6.6",
    "eslint-plugin-testing-library": "^4.6.0",
    "husky": "^7.0.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.0.6",
    "lerna": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "open-cli": "^7.0.0",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-router-dom": "^6.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^3.29.4",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.36.0",
    "sass": "^1.32.8",
    "sass-loader": "^12.1.0",
    "storybook": "^7.6.0",
    "style-loader": "^3.0.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.0.0",
    "typescript": "^5.3.3",
    "yup": "^0.32.11"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "storybook-deployer": {
    "commitMessage": "Deploy Storybook [skip ci]"
  },
  "dependencies": {
    "ansi-regex": "^6.0.1",
    "glob-parent": "^5.1.2",
    "immer": "^9.0.6",
    "node-sass": "^9.0.0",
    "postcss-scss": "4.0.9",
    "trim": "^1.0.1"
  }
}
